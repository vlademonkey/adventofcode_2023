{
    // =============================================================================================
    // Important shortcut keys:
    // - Preview markdown: ctrl+K, V
    // - Insert file header: ctrl+alt+H, ctrl+alt+H
    // =============================================================================================
    "workbench.colorTheme": "Dark+ Material",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showTabs": "multiple",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",
    "telemetry.telemetryLevel": "off",
    "window.newWindowDimensions": "inherit",
    "window.zoomLevel": 0,
    "outline.showVariables": false,
    "outline.showConstants": false,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 15,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.folding": false,
    "editor.smoothScrolling": true,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.cursorBlinking": "blink",
    "editor.minimap.showSlider": "always",
    "editor.renderLineHighlight": "all",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        100,
        120,
        140
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
    },
    "workbench.colorCustomizations": {
        "editor.background": "#1f1f1f",
        "statusBar.background": "#181818",
        "statusBarItem.remoteBackground": "#1f1f1f",
        "statusBar.border": "#303030",
        "titleBar.activeBackground": "#181818",
        "titleBar.border": "#303030",
        "activityBar.background": "#181818",
        "sideBar.background": "#181818",
        "sideBar.border": "#303030",
        "tab.activeBackground": "#303030",
        "tab.inactiveBackground": "#181818",
        "tab.border": "#303030",
        "tab.activeBorderTop": "#303030",
        "editorGroupHeader.noTabsBackground": "#181818",
        "editorGroupHeader.tabsBackground": "#181818",
    },
    // "editor.multiCursorModifier": "ctrlCmd", // Default: "alt"
    // Determine scope: right-click text, Command Palette, Developer: Inspect Editor Tokens and Scopes
    // https://github.com/Microsoft/vscode/issues/32579#issuecomment-373090396
    "editor.tokenColorCustomizations": {
        "comments": "#828282",
        "types": "#1de9b6",
        "textMateRules": [
            // Module/class name color.
            {
                "scope": "entity.name.namespace",
                "settings": {
                    "foreground": "#00bfa5",
                }
            },
            // Change leading comment character to same as "comments" above.
            {
                "scope": "punctuation.definition.comment",
                "settings": {
                    "foreground": "#828282",
                }
            },
            // Python heredoc color.
            {
                "scope": "string.quoted.docstring.multi.python",
                "settings": {
                    "foreground": "#ff8d33",
                }
            },
            // Highlight for "TODO" or "NOTE" type tags.
            {
                "scope": "keyword.codetag.notation.python",
                "settings": {
                    "foreground": "#FFFF00",
                    "fontStyle": "bold",
                }
            },
            // Disable all italics.
            // https://stackoverflow.com/questions/44219768/disable-italic-syntax-highlighting-in-vs-code
            {
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "constant",
                    "constant.character",
                    "constant.character.escape",
                    "constant.numeric",
                    "constant.numeric.integer",
                    "constant.numeric.float",
                    "constant.numeric.hex",
                    "constant.numeric.octal",
                    "constant.other",
                    "constant.regexp",
                    "constant.rgb-value",
                    "emphasis",
                    "entity",
                    "entity.name",
                    "entity.name.class",
                    "entity.name.function",
                    "entity.name.method",
                    "entity.name.section",
                    "entity.name.selector",
                    "entity.name.tag",
                    "entity.name.type",
                    "entity.other",
                    "entity.other.attribute-name",
                    "entity.other.inherited-class",
                    "invalid",
                    "invalid.deprecated",
                    "invalid.illegal",
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.operator.new",
                    "keyword.operator.assignment",
                    "keyword.operator.arithmetic",
                    "keyword.operator.logical",
                    "keyword.other",
                    "markup",
                    "markup.bold",
                    "markup.changed",
                    "markup.deleted",
                    "markup.heading",
                    "markup.inline.raw",
                    "markup.inserted",
                    "markup.italic",
                    "markup.list",
                    "markup.list.numbered",
                    "markup.list.unnumbered",
                    "markup.other",
                    "markup.quote",
                    "markup.raw",
                    "markup.underline",
                    "markup.underline.link",
                    "meta",
                    "meta.block",
                    "meta.cast",
                    "meta.class",
                    "meta.function",
                    "meta.function-call",
                    "meta.preprocessor",
                    "meta.return-type",
                    "meta.selector",
                    "meta.tag",
                    "meta.type.annotation",
                    "meta.type",
                    "punctuation.definition.comment",
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                    "punctuation.separator",
                    "punctuation.separator.continuation",
                    "punctuation.terminator",
                    "storage",
                    "storage.modifier",
                    "storage.type",
                    "string",
                    "string.interpolated",
                    "string.other",
                    "string.quoted",
                    "string.quoted.docstring.multi.python",
                    "string.quoted.double",
                    "string.quoted.other",
                    "string.quoted.single",
                    "string.quoted.triple",
                    "string.regexp",
                    "string.unquoted",
                    "strong",
                    "support",
                    "support.class",
                    "support.constant",
                    "support.function",
                    "support.other",
                    "support.type",
                    "support.type.property-name",
                    "support.variable",
                    "variable",
                    "variable.language",
                    "variable.name",
                    "variable.other",
                    "variable.other.readwrite",
                    "variable.parameter",
                    "variable.parameter.function.language.special.self.python",
                ],
                "settings": {
                    "fontStyle": "",
                }
            }
        ],
    },
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "files.trimTrailingWhitespace": true,
    "files.simpleDialog.enable": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.ksh": "shellscript",
        "*.ksi": "shellscript",
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/runbook/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
    },
    //  "python.defaultInterpreterPath": "C:\\Apps\\Python38-32\\python.exe",
    "python.languageServer": "Pylance",
    "python.terminal.executeInFileDir": true,
    "python.analysis.typeCheckingMode": "basic", // "off", "basic", or "strict"
    "python.analysis.extraPaths": [
        "",
    ],
    "flake8.args": [
        "--max-line-length=100",
        // flake8 ignore:
        // F541 = f-string is missing parameters
        // W503 = line break before binary operator (and, or)
        "--ignore=F541,W503",
    ],
    "black-formatter.args": [
        "--line-length=100",
    ],
    // "black-formatter.path": [
    //     "C:\\Apps\\Python38-32\\Scripts\\black.exe"
    // ],
    "perlSyntax.includePaths": [
        "",
    ],
    "perl.perlInc": [
        "",
    ],
    "restructuredtext.linter.doc8.extraArgs": [
        "--max_line_length",
        "100",
    ],
    "editor.matchBrackets": "near",
    "breadcrumbs.enabled": false,
    "git.untrackedChanges": "separate",
    // psioniq File Header (ctrl+alt+H, ctrl+alt+H)
    "psi-header.config": {
        "license": "Custom",
    },
    "psi-header.templates": [
        {
            "language": "python",
            "template": [
                "<<licensetext>>",
            ],
        },
    ],
    "psi-header.license-text": [
        "",
    ],
    "psi-header.lang-config": [
        {
            "language": "python",
            "begin": "",
            "prefix": "# ",
            "end": "",
            "blankLinesAfter": 0,
            "beforeHeader": [
                "#!/usr/bin/env python",
                "# -*- coding:utf-8 -*-",
                "\"\"\"",
                "Description:",
                "    Description of the script...",
                "\"\"\"",
            ],
            "afterHeader": [
                "",
                "import sys",
                "",
                "",
                "# --------------------------------------------------------------------------------------------------",
                "def main() -> int:",
                "    \"\"\"",
                "    Main execution.",
                "",
                "    Returns:",
                "        int: 0 if no errors occurred, otherwise non-zero.",
                "    \"\"\"",
                "    return 0",
                "",
                "",
                "# --------------------------------------------------------------------------------------------------",
                "if __name__ == \"__main__\":",
                "    sys.exit(main())",
            ],
        },
    ],
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left",
    },
    "security.workspace.trust.untrustedFiles": "open",
    "git.openRepositoryInParentFolders": "never",
    "jupyter.interactiveWindow.textEditor.executeSelection": false,
    "git.confirmSync": false,
    "workbench.activityBar.location": "top",
}
